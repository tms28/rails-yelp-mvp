<div class="container">
  <h1 class="text-center">A safe space for mean lonely people</h1>
  <div class="row">
    <% @restaurants.each do |restaurant| %>

    <div class="col-xs-12 col-sm-4">
      <div class="card">
        <div class="card-description">
          <h2><%= restaurant.name %></h2>
          <p><%= restaurant.address %></p>
        </div>

        <%= link_to "Talk shit", restaurant_path(restaurant), class: "card-link" %>
      </div>
    </div>
    <% end %>
          <div>
        <%= link_to "Add a new restaurant", new_restaurant_path, class: "card-link" %>
      </div>
  </div>
</div>
